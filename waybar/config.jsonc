// -*- mode: jsonc -*-
{
    "include": [ "$HOME/.cache/wal/colors.json" ],
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 40, // Waybar height (to be removed for auto height)
    "spacing": 0, // Gaps between modules (4px)
    "reload_style_on_change": true,
    "modules-left": [
        "clock",
        "mpd",
        "custom/pacman",
        "custom/colorpicker"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "cpu",
        "memory",
        "backlight",
        "pulseaudio",
        "network",
        "battery",
        "custom/swaync",
        "tray"
    ],
  // Modules configuration

  "hyprland/workspaces": {
      "format": "{id}.{icon}",
      "format-icons": {
          "1": "DEV",
          "2": "DOC",
          "3": "WEB",
          "4": "IMG",
          "5": "VFX",
          "6": "SYS",
          "7": "FUN",
          "8": "CHAT",
          "9": "MICS"
      },
      "all-outputs": true,
      "persistent-workspaces": {}
  },
  "custom/pacman": {
      "interval": 3600,
      "return-type": "json",
      "exec": "~/.config/waybar/scripts/pacman-updates.sh",
      "exec-if": "exit 0",
      "on-click": "$TERMINAL -e paru; pkill -SIGRTMIN+8 waybar",
      "signal": 8
  },
  "mpd": {
      "format": "ï€ {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) :: {volume}%",
      "format-disconnected": "Disconnected",
      "format-stopped": "ï€ Stopped",
      "unknown-tag": "N/A",
      "title-len": 30,
      "interval": 5,
      "on-click": "hyprctl dispatch exec '[float]' '$TERMINAL -e rmpc'",
      "consume-icons": {
          "off": "<span color='$COLOR8'>ïƒ„ </span> ",
          "on": "<span color='$COLOR15'>ïƒ„ </span> "
      },
      "random-icons": {
          "off": "<span color='$COLOR8'>ï´ </span> ",
          "on": "<span color='$COLOR15'>ï´ </span> "
      },
      "repeat-icons": {
          "off": "<span color='$COLOR8'>ï€ </span> ",
          "on": "<span color='$COLOR15'>ï€ </span> "
      },
      "single-icons": {
          "on": "ï€ 1",
          "off": "ï€ 1"
      },
      "state-icons": {
          "paused": "ïŒ ",
          "playing": "ï‹ "
      },
      "tooltip": false,
      "tooltip-format": "MPD (connected)",
      "tooltip-format-disconnected": "MPD (disconnected)"
  },
  "tray": {
      "tooltip": false,
      "spacing": 10
  },
  "clock": {
      "tooltip": true,
      "tooltip-format": "<tt>{calendar}</tt>",
      "format" : "{:%d %b | %H:%M}",
      "on-click": "hyprctl dispatch exec '[float]' '$TERMINAL -e calcurse'",
      "actions":  {
          "on-click-right": "mode",
          "on-click-forward": "tz_up",
          "on-click-backward": "tz_down",
          "on-scroll-up": "shift_up",
          "on-scroll-down": "shift_down"
      },
      "calendar": {
          "mode"          : "month",
          "mode-mon-col"  : 3,
          "weeks-pos"     : "left",
          "on-scroll"     : 1,
          "format": {
              "months":     "<span color='$COLOR2'><b>{}</b></span>",
              "days":       "<span color='$COLOR3'><b>{}</b></span>",
              "weeks":      "<span color='$COLOR4'><b>W{}</b></span>",
              "weekdays":   "<span color='$COLOR5'><b>{}</b></span>",
              "today":      "<span color='$COLOR6'><b>{}</b></span>"
          }
      }
  },
  "cpu": {
      "interval": 1,
      "format": "î‰¦ {icon0}{icon1}{icon2}{icon3}{icon4}{icon5}{icon6}{icon7}",
      "format-icons": [
          "<span color='$COLOR15'>â–</span>", // green
          "<span color='$COLOR15'>â–‚</span>", // blue
          "<span color='$COLOR15'>â–ƒ</span>", // white
          "<span color='$COLOR15'>â–„</span>", // white
          "<span color='$COLOR15'>â–…</span>", // yellow
          "<span color='$COLOR15'>â–†</span>", // yellow
          "<span color='$COLOR15'>â–‡</span>", // orange
          "<span color='$COLOR15'>â–ˆ</span>"  // red
      ],
      "tooltip": true
  },
  "memory": {
      "format": "ïƒ‰ {}%",
      "tooltip": true,
  },
  "temperature": {
      "critical-threshold": 80,
      "format": "{temperatureC}Â°C {icon}",
      "format-icons": ["ï‹‹", "ï‹‰", "ï‹‡"]
  },
  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": ["ğŸŒ‘", "ğŸŒ˜", "ğŸŒ—", "ğŸŒ–", "ğŸŒ•"],
    "tooltip": false
  },
  "battery": {
      "states": {
          "good": 95,
          "warning": 30,
          "critical": 15
      },
      "tooltip": false,
      "format": "{icon}{capacity}%",
      "format-full": "{icon}{capacity}%",
      "format-charging": "îº¡ {capacity}%",
      "format-plugged": "ï‡¦ {capacity}%",
      "format-alt": "{icon} {time}",
      "format-icons": [
          "ï‰„ ",
          "ï‰ƒ ",
          "ï‰‚ ",
          "ï‰ ",
          "ï‰€ "
      ]
  },
  "battery#bat2": {
      "bat": "BAT2"
  },
  "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": false,
      "format-icons": {
          "default": "ïƒ§",
          "performance": "ïƒ§",
          "balanced": "ï‰ ",
          "power-saver": "ï¬ "
      }
  },
  "network": {
      "format-wifi": "ï‡« {essid} ({signalStrength}%)",
      "format-ethernet": "{ipaddr}/{cidr} ï–",
      "tooltip": false,
      "tooltip-format": "{ifname} via {gwaddr}",
      "format-linked": "ïƒ {ifname} (No IP)",
      "format-disconnected": "ï„§ Disconnected",
      "format-alt": "{ifname}: {ipaddr}/{cidr}",
      "on-click-right": "$TERMINAL --title TermNmtui sh -c 'sleep 0.1; nmtui'"
  },
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{icon}{volume}% {format_source}",
    "format-bluetooth": "{icon}{volume}% ïŠ” {format_source}",
    "format-bluetooth-muted": "ï„± {icon}ïŠ” {format_source}",
    "format-muted": "ï„± {format_source}",
    "format-source": "ï„° {volume}%",
    "format-source-muted": "ï„± ",
    "format-icons": {
        "headphone": "ï€¥ ",
        "headset": "î¹™ ",
        "default": ["ï€¦ ", "ï€§ ", "ï€¨ "]
    },
    "on-click": "pavucontrol"
  },
  "custom/colorpicker": {
      "format": "{}",
      "return-type": "json",
      "interval": "once",
      "exec": "~/.config/waybar/scripts/colorpicker.sh -j",
      "on-click": "~/.config/waybar/scripts/colorpicker.sh",
      "signal": 1
  },

  "custom/swaync": {
      "tooltip": true,
      "tooltip-format": "Left Click: Launch Notification Center\nRight Click: Do not Disturb",
      "format": "{icon}",
      "format-icons": {
          "notification": "ó°‚š<span foreground='$COLOR9'><sup>ï‘„</sup></span>",
          "none": "ó°‚š",
          "dnd-notification": "ó°‚›<span foreground='$COLOR9'><sup>ï‘„</sup></span>",
          "dnd-none": "ó°‚›",
          "inhibited-notification": "ó°‚š<span foreground='$COLOR9'><sup>ï‘„</sup></span>",
          "inhibited-none": "ó°‚š",
          "dnd-inhibited-notification": "ó°‚›<span foreground='$COLOR9'><sup>ï‘„</sup></span>",
          "dnd-inhibited-none": "ó°‚›"
      },
      "return-type": "json",
      "exec-if": "which swaync-client",
      "exec": "swaync-client -swb",
      "on-click": "sleep 0.1 && swaync-client -t -sw",
      "on-click-right": "swaync-client -d -sw",
      "escape": true
  },
  "wlr/taskbar": {
      "format": "{icon}",
      "icon-size": 20,
      "icon-theme": "Papirus",
      "markup": true,
      "tooltip": false,
      "tooltip-format": "{title} ({state}",
          "on-click": "activate",
          "on-click-middle": "close",
          "ignore-list": [
              "Alacritty"
          ],
          "app_ids-mapping": {
              "firefoxdeveloperedition": "firefox-developer-edition"
          },
          "rewrite": {
              "Firefox Web Browser": "Firefox",
              "Foot Server": "Terminal"
          }
  }
}
